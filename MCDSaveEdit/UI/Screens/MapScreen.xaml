<UserControl x:Class="MCDSaveEdit.UI.MapScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCDSaveEdit.UI"
            mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="825"
            SizeChanged="screen_SizeChanged">
    <DockPanel x:Name="grid">
        <local:MissionScreen x:Name="missionScreen"/>

        <Canvas x:Name="canvas" Margin="0" DockPanel.Dock="Right">
            <Label x:Name="mapLabel"
               Content="*Mainland*"
               Height="Auto" Width="Auto"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Background="#FF606060"
               Foreground="White"
               Margin="20"
               FontWeight="ExtraBold"
               Padding="15,5"
               HorizontalContentAlignment="Center"/>
        </Canvas>
    </DockPanel>
</UserControl>
