<UserControl x:Class="MCDSaveEdit.UI.StatField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCDSaveEdit.UI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="330">
    <DockPanel>
        <TextBlock x:Name="textBlock" DockPanel.Dock="Left" Text="*Current Floor*" HorizontalAlignment="Left" FontSize="14" Padding="0" Margin="5,0" VerticalAlignment="Center"/>
        <local:Stepper x:Name="stepper" Width="12" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0" UpButtonClick="upButton_Click" DownButtonClick="downButton_Click"/>
        <TextBox x:Name="textBox" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0" Width="70" FontSize="16" Text="12345" Background="{x:Null}" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
    </DockPanel>
</UserControl>
